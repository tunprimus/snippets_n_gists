# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.{py,json,yml,ipynb}]
indent_size = 4
indent_style = space

[*.{html,css,js}]
indent_size = 2
indent_style = tab

[Makefile]
indent_style = tab

[*.md]
max_line_length = 0
trim_trailing_whitespace = false 
